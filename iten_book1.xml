<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_vertical_margin">
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="center_horizontal"
    android:id="@+id/bookPicture"
    android:contentDescription="Advanced Search"
    android:paddingTop="0dp"
    android:layout_alignTop="@+id/bookTitle"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

<TextView
    android:id="@+id/bookTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Book Title"
    android:textColor="@color/material_deep_teal_500"
    android:paddingTop="10px"
    android:layout_marginTop="42dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
<TextView
    android:id="@+id/bookGenre"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Book Genre"
    android:textStyle="italic"
    android:textColor="@color/background_floating_material_dark"
    android:paddingTop="10px"
    android:layout_below="@+id/bookTitle"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<TextView
    android:id="@+id/bookAuthor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Authors"
    android:textColor="@color/background_floating_material_dark"
    android:layout_below="@+id/bookGenre"
    android:layout_alignLeft="@+id/bookGenre"
    android:layout_alignStart="@+id/bookGenre"
    android:paddingTop="10px" />

<TextView
    android:id="@+id/bookPrice"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Price"
    android:textColor="@color/background_floating_material_dark"
    android:layout_below="@+id/bookAuthor"
    android:layout_alignLeft="@+id/bookAuthor"
    android:layout_alignStart="@+id/bookAuthor"
    android:paddingTop="10px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/bookDescription"
        android:layout_below="@+id/bookPicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="dirtay"
        android:id="@+id/bookDirtay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>